<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.funny.addworddemo.TextVerticalActivity">

    <com.funny.addworddemo.VerticalTextView
        android:id="@+id/verticalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       />


    <EditText
        android:id="@+id/edit_text"
        android:layout_above="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_above="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/zuoduiqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左对齐" />

        <Button
            android:id="@+id/juzhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="居中对齐" />

        <Button
            android:id="@+id/youduiqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右对齐" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/hengButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="横向" />

        <Button
            android:id="@+id/shuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="竖向" />

    </LinearLayout>
</RelativeLayout>
